{
  "name": "cloudboard",
  "version": "2.6.2",
  "description": "A shared soundboard. ï¿½",
  "main": "server/index.js",
  "engines": {
    "node": ">7"
  },
  "scripts": {
    "start": "node server",
    "serve": "concurrently 'nodemon server' 'npm:watch'",
    "copy-static": "mkdir -p public; cp -r sounds public/",
    "watch": "NODE_ENV=development webpack",
    "build": "npm run copy-static; NODE_ENV=production webpack",
    "test": "eslint .",
    "generate": "mkdir -p tools/output; rm -Rf tools/output/*; node ./tools/sound-generator.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngerritsen/cloudboard.git"
  },
  "keywords": [
    "soundboard",
    "cloud",
    "nederlands",
    "nl"
  ],
  "author": "Niels Gerritsen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ngerritsen/cloudboard/issues"
  },
  "homepage": "https://github.com/ngerritsen/cloudboard#readme",
  "dependencies": {
    "express": "^4.14.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.1",
    "react-router-dom": "^4.3.1",
    "redux": "^3.5.2",
    "redux-map-reducers": "^1.0.1",
    "redux-observable": "^0.13.0",
    "rxjs": "^5.1.0",
    "shortid": "^2.2.6",
    "socket.io": "^1.5.0",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-env": "^1.1.4",
    "babel-preset-react": "^6.11.1",
    "concurrently": "^3.6.1",
    "css-loader": "^0.26.1",
    "eslint": "^5.2.0",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "fs-extra": "^1.0.0",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "nodemon": "^1.18.3",
    "pre-commit": "^1.1.3",
    "redux-logger": "^2.6.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": "last 2 versions"
          }
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "pre-commit": [
    "test"
  ]
}
